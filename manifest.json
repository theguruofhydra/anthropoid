{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "0.9",
  "description": "__MSG_extensionDescription__",
  "default_locale": "fr",

  "applications": {
    "gecko": {
      "id": "Anthropoid@example.com"
    }
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus",
    "scripting",
    "https://*/api/*",
    "https://api.anthropic.com/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://m.youtube.com/*",
    "http://*/*",
    "https://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["logger.js", "background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup-classic.html",
    "default_title": "__MSG_extensionName__"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    "popup.html",
    "conversation.html",
    "popup-classic.html",
    "icons/*.png"
  ]
}
